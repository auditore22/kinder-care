@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title> Recuperar contraseña</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/logo/favicon.png">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/file-upload.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/plyr.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css">
    <!-- full calendar -->
    <link rel="stylesheet" href="~/css/full-calendar.css">
    <!-- jquery Ui -->
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <!-- editor quill Ui -->
    <link rel="stylesheet" href="~/css/editor-quill.css">
    <!-- apex charts Css -->
    <link rel="stylesheet" href="~/css/apexcharts.css">
    <!-- calendar Css -->
    <link rel="stylesheet" href="~/css/calendar.css">
    <!-- jvector map Css -->
    <link rel="stylesheet" href="~/css/jquery-jvectormap-2.0.5.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

<!--==================== Preloader Start ====================-->
<div class="preloader">
    <div class="loader"></div>
</div>
<!--==================== Preloader End ====================-->

<!--==================== Sidebar Overlay End ====================-->
<div class="side-overlay"></div>
<!--==================== Sidebar Overlay End ====================-->

<section class="auth d-flex">
    <div class="auth-left bg-main-50 flex-center p-24">
        @*<img src="https://html.themeholy.com/edmate/assets/images/thumbs/auth-img1.png" alt="">*@
        <img style="height: 400px; width: 400px" src="~/images/logo/logo-kinder.png" alt="">
    </div>
    <div class="auth-right py-40 px-24 flex-center flex-column">
        <div class="auth-right__inner mx-auto w-100">
            @*<a asp-action="Login" class="auth-right__logo">
            <img src="~/images/logo/logo-kinder.png" alt="">
        </a>*@
            <h2 class="fw-bold mb-8">Correo de Recuperación Enviado</h2>

            <!-- Mensaje con espacio arriba y abajo -->
            <p class="text-gray-600 my-4">
                <!-- Usamos 'my-4' para margen vertical (arriba y abajo) -->
                Te hemos enviado un correo electrónico con instrucciones para recuperar tu contraseña. Revisa tu bandeja
                de entrada.
            </p>

            <!-- Botón para volver al inicio de sesión -->
            <a class="btn btn-main rounded-pill w-100 mb-4" asp-action="Login" asp-controller="Access">
                Volver al Inicio de Sesión
            </a>

            <!-- Enlace para refrescar la página -->
            <p class="mt-4 text-gray-600">
                ¿No recibiste el correo?
                <a href="javascript:void(0);" onclick="location.reload();"
                   class="text-main-600 hover-text-decoration-underline">Reenviar</a>
            </p>

        </div>
    </div>
</section>

<!-- Jquery js -->
<script src="~/js/jquery-3.7.1.min.js"></script>
<!-- Bootstrap Bundle Js -->
<script src="~/js/boostrap.bundle.min.js"></script>
<!-- Phosphor Js -->
<script src="~/js/phosphor-icon.js"></script>
<!-- file upload -->
<script src="~/js/file-upload.js"></script>
<!-- file upload -->
<script src="~/js/plyr.js"></script>
<!-- dataTables -->
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
<!-- full calendar -->
<script src="~/js/full-calendar.js"></script>
<!-- jQuery UI -->
<script src="~/js/jquery-ui.js"></script>
<!-- jQuery UI -->
<script src="~/js/editor-quill.js"></script>
<!-- apex charts -->
<script src="~/js/apexcharts.min.js"></script>
<!-- Calendar Js -->
<script src="~/js/calendar.js"></script>
<!-- jvectormap Js -->
<script src="~/js/jquery-jvectormap-2.0.5.min.js"></script>
<!-- jvectormap world Js -->
<script src="~/js/jquery-jvectormap-world-mill-en.js"></script>

<!-- main js -->
<script src="~/js/main.js"></script>

</body>
</html>