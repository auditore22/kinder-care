@model kinder_care.Models.Usuarios

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title> Edmate Learning Dashboard HTML Template</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/logo/favicon.png">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/file-upload.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/plyr.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css">
    <!-- full calendar -->
    <link rel="stylesheet" href="~/css/full-calendar.css">
    <!-- jquery Ui -->
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <!-- editor quill Ui -->
    <link rel="stylesheet" href="~/css/editor-quill.css">
    <!-- apex charts Css -->
    <link rel="stylesheet" href="~/css/apexcharts.css">
    <!-- calendar Css -->
    <link rel="stylesheet" href="~/css/calendar.css">
    <!-- jvector map Css -->
    <link rel="stylesheet" href="~/css/jquery-jvectormap-2.0.5.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/main.css">
</head> 
<body>
    
<!--==================== Preloader Start ====================-->
  <div class="preloader">
    <div class="loader"></div>
  </div>
<!--==================== Preloader End ====================-->

<!--==================== Sidebar Overlay End ====================-->
<div class="side-overlay"></div>
<!--==================== Sidebar Overlay End ====================-->

<section class="auth d-flex">
    <div class="auth-left bg-main-50 flex-center p-24">
        <img src="~/images/icons/Registro_logo.png" alt="" style="height: 300px; width: 300px">
    </div>
    <div class="auth-right py-40 px-24 flex-center flex-column">
        <div class="auth-right__inner mx-auto w-100">
            <a asp-action="Register" class="auth-right__logo">
                <img src="images/logo/logo.png" alt="">
            </a>
            <h2 class="mb-8">Sign Up</h2>
            <p class="text-gray-600 text-15 mb-32">Registrate porfavor</p>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-24">
                    <label asp-for="Cedula" class="form-label mb-8 h6">Username (Cedula)</label>
                    <div class="position-relative">
                        <input type="text" class="form-control py-11 ps-40" id="cedula" placeholder="101110111.." required asp-for="Cedula">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-user"></i></span>
                    </div>
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <div class="mb-24">
                    <label asp-for="CorreoElectronico" class="form-label mb-8 h6">Email</label>
                    <div class="position-relative">
                        <input type="email" class="form-control py-11 ps-40" id="email" placeholder="Email@gmail.com.." required asp-for="CorreoElectronico">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-envelope"></i></span>
                    </div>
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="mb-24">
                    <label asp-for="Nombre" class="form-label mb-8 h6">Name</label>
                    <div class="position-relative">
                        <input type="text" class="form-control py-11 ps-40" id="nombre" placeholder="Nombre.." required asp-for="Nombre">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-user"></i></span>
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-24">
                    <label asp-for="ContrasenaHash" class="form-label mb-8 h6">Password</label>
                    <div class="position-relative">
                        <input type="password" class="form-control py-11 ps-40" id="password" placeholder="Enter Password" required asp-for="ContrasenaHash">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-lock"></i></span>
                    </div>
                    <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
                </div>

                <div class="mb-24">
                    <label asp-for="NumTelefono" class="form-label mb-8 h6">Phone Number</label>
                    <div class="position-relative">
                        <input type="number" class="form-control py-11 ps-40" id="phone" placeholder="12345678.." required asp-for="NumTelefono">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-phone"></i></span>
                    </div>
                    <span asp-validation-for="NumTelefono" class="text-danger"></span>
                </div>

                <div class="mb-24">
                    <label asp-for="Direccion" class="form-label mb-8 h6">Address</label>
                    <div class="position-relative">
                        <input type="text" class="form-control py-11 ps-40" id="direccion" placeholder="Street/City.." required asp-for="Direccion">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-map-pin"></i></span>
                    </div>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                @if (ViewData["Mensaje"] != null)
                {
                <span class="text-danger">
                        @ViewData["Mensaje"]
                    </span>
                }

                <div class="col-12">
                    <div class="d-grid">
                        <button class="btn btn-main rounded-pill w-100" type="submit">Registrarse</button>
                    </div>
                </div>
            </form>

            <p class="mt-32 text-gray-600 text-center">Ya tienes una cuenta?
                <a asp-action="Login" class="text-main-600 hover-text-decoration-underline">Iniciar Sesión</a>
            </p>
        </div>
    </div>
</section>

        <!-- Jquery js -->
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap Bundle Js -->
    <script src="~/js/boostrap.bundle.min.js"></script>
    <!-- Phosphor Js -->
    <script src="~/js/phosphor-icon.js"></script>
    <!-- file upload -->
    <script src="~/js/file-upload.js"></script>
    <!-- file upload -->
    <script src="~/js/plyr.js"></script>
    <!-- dataTables -->
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <!-- full calendar -->
    <script src="~/js/full-calendar.js"></script>
    <!-- jQuery UI -->
    <script src="~/js/jquery-ui.js"></script>
    <!-- jQuery UI -->
    <script src="~/js/editor-quill.js"></script>
    <!-- apex charts -->
    <script src="~/js/apexcharts.min.js"></script>
    <!-- Calendar Js -->
    <script src="~/js/calendar.js"></script>
    <!-- jvectormap Js -->
    <script src="~/js/jquery-jvectormap-2.0.5.min.js"></script>
    <!-- jvectormap world Js -->
    <script src="~/js/jquery-jvectormap-world-mill-en.js"></script>
    
    <!-- main js -->
    <script src="~/js/main.js"></script>



    </body>
</html>