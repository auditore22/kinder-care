@model kinder_care.Models.ViewModels.UsuarioVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title>La Granja</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/logo/favicon.png">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/file-upload.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/plyr.css">
    <!-- full calendar -->
    <link rel="stylesheet" href="~/css/full-calendar.css">
    <!-- jquery Ui -->
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <!-- editor quill Ui -->
    <link rel="stylesheet" href="~/css/editor-quill.css">
    <!-- apex charts Css -->
    <link rel="stylesheet" href="~/css/apexcharts.css">
    <!-- calendar Css -->
    <link rel="stylesheet" href="~/css/calendar.css">
    <!-- jvector map Css -->
    <link rel="stylesheet" href="~/css/jquery-jvectormap-2.0.5.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

<!--==================== Preloader Start ====================-->
<div class="preloader">
    <div class="loader"></div>
</div>
<!--==================== Preloader End ====================-->

<!--==================== Sidebar Overlay End ====================-->
<div class="side-overlay"></div>
<!--==================== Sidebar Overlay End ====================-->

<section class="auth d-flex">
    <div class="auth-left bg-main-50 flex-center p-24">
        <img style="height: 400px; width: 400px" src="~/images/logo/logo-kinder.png" alt="">
    </div>
    <div class="auth-right py-40 px-24 flex-center flex-column">
        <div class="auth-right__inner mx-auto w-100">
            <h2 class="mb-8">Bienvenido de nuevo! &#128075;</h2>
            <p class="text-gray-600 text-15 mb-32">Por favor incia sesión con una cuenta para poder ingresar</p>

            <form asp-action="Login" method="post">
                <div class="mb-24">
                    <label for="CorreoElectronico" class="form-label mb-8 h6">Email</label>
                    <div class="position-relative">
                        <input type="email" class="form-control py-11 ps-40" placeholder="Escribe tu correo" required asp-for="CorreoElectronico">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex">
                            <i class="ph ph-user"></i>
                        </span>
                    </div>
                </div>
                <div class="mb-24">
                    <label for="ContrasenaHash" class="form-label mb-8 h6">Contraseña</label>
                    <div class="position-relative">
                        <input type="password" class="form-control py-11 ps-40" id="passwordInput" placeholder="Ingresa tu contraseña actual" required asp-for="ContrasenaHash">

                        <!-- Ícono para alternar la visibilidad -->
                        <span class="toggle-password position-absolute top-50 inset-inline-end-0 me-16 translate-middle-y ph ph-eye-slash" id="togglePassword"></span>

                        <!-- Ícono de candado -->
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex">
                            <i class="ph ph-lock"></i>
                        </span>

                    </div>
                </div>
                <div class="mb-32 flex-between flex-wrap gap-8">
                    @if (ViewData["Mensaje"] != null)
                    {
                        <span class="text-danger">
                            @ViewData["Mensaje"]
                        </span>
                    }
                    <a asp-action="Recovery" class="text-main-600 hover-text-decoration-underline text-15 fw-medium">Olvidaste la contraseña?</a>
                </div>
                <button type="submit" class="btn btn-main rounded-pill w-100">Iniciar Sesión</button>
            </form>
        </div>
    </div>
</section>

<script>
    // Selecciona el campo de entrada de la contraseña y el ícono del ojo
    const passwordInput = document.getElementById('passwordInput');
    const togglePassword = document.getElementById('togglePassword');

    // Evento para alternar la visibilidad de la contraseña
    togglePassword.addEventListener('click', function () {
        // Alterna el tipo de entrada entre "password" y "text"
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;

        // Cambia el ícono
        this.classList.toggle('ph-eye');
        this.classList.toggle('ph-eye-slash');
    });
</script>

<!-- Jquery js -->
<script src="~/js/jquery-3.7.1.min.js"></script>
<!-- Bootstrap Bundle Js -->
<script src="~/js/boostrap.bundle.min.js"></script>
<!-- Phosphor Js -->
<script src="~/js/phosphor-icon.js"></script>
<!-- file upload -->
<script src="~/js/file-upload.js"></script>
<!-- file upload -->
<script src="~/js/plyr.js"></script>
<!-- full calendar -->
<script src="~/js/full-calendar.js"></script>
<!-- jQuery UI -->
<script src="~/js/jquery-ui.js"></script>
<!-- jQuery UI -->
<script src="~/js/editor-quill.js"></script>
<!-- apex charts -->
<script src="~/js/apexcharts.min.js"></script>
<!-- jvectormap Js -->
<script src="~/js/jquery-jvectormap-2.0.5.min.js"></script>
<!-- jvectormap world Js -->
<script src="~/js/jquery-jvectormap-world-mill-en.js"></script>
<!-- main js -->
<script src="~/js/main.js"></script>

</body>
</html>