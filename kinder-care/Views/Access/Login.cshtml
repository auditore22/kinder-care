@model kinder_care.Models.ViewModels.UsuarioVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/login/login.css" rel="stylesheet" />
</head>

<body class="bg-dark">
    <div class="login-container text-center text-white">
        <hr />

        <br />
        <h2 class="fw-bold mb-2 text-uppercase">Iniciar sesión</h2>
        <br />

        <form method="post" class="text-center">
            <div class="form-outline form-white mb-4">
                <label for="Nombre" class="form-label">Nombre de usuario</label>
                <input type="text" class="form-control form-control-lg" placeholder="Usuario123.." required asp-for="Nombre" />
            </div>

            <div class="form-outline form-white mb-4">
                <label for="ContrasenaHash" class="form-label">Contraseña</label>
                <input type="password" class="form-control form-control-lg" placeholder="***..." required asp-for="ContrasenaHash" />
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <span class="text-danger">
                    @ViewData["Mensaje"]
                </span>
            }

            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#">¿Olvidaste tu contraseña?</a></p>

            <button class="btn btn-outline-light btn-lg px-5" type="submit">Iniciar Sesión</button>

            <br />
            <br />

        </form>

        <hr/>
@*         <a class="text-center link-light text-decoration-none" asp-action="Register" asp-controller="Access">Registrarme</a> *@
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
