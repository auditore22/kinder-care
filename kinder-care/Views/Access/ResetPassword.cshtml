@model kinder_care.Models.ViewModels.ResetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title> Edmate Learning Dashboard HTML Template</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/logo/favicon.png">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/file-upload.css">
    <!-- file upload -->
    <link rel="stylesheet" href="~/css/plyr.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css">
    <!-- full calendar -->
    <link rel="stylesheet" href="~/css/full-calendar.css">
    <!-- jquery Ui -->
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <!-- editor quill Ui -->
    <link rel="stylesheet" href="~/css/editor-quill.css">
    <!-- apex charts Css -->
    <link rel="stylesheet" href="~/css/apexcharts.css">
    <!-- calendar Css -->
    <link rel="stylesheet" href="~/css/calendar.css">
    <!-- jvector map Css -->
    <link rel="stylesheet" href="~/css/jquery-jvectormap-2.0.5.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

<!--==================== Preloader Start ====================-->
<div class="preloader">
    <div class="loader"></div>
</div>
<!--==================== Preloader End ====================-->

<!--==================== Sidebar Overlay End ====================-->
<div class="side-overlay"></div>
<!--==================== Sidebar Overlay End ====================-->

<section class="auth d-flex">
    <div class="auth-left bg-main-50 flex-center p-24">
        @*<img src="https://html.themeholy.com/edmate/assets/images/thumbs/auth-img1.png" alt="">*@
        <img style="height: 400px; width: 400px" src="~/images/logo/logo-kinder.png" alt="">
    </div>
    <div class="auth-right py-40 px-24 flex-center flex-column">
        <div class="auth-right__inner mx-auto w-100">
            @*<a asp-action="Login" class="auth-right__logo">
                    <img src="~/images/logo/logo-kinder.png" alt="">
                </a>*@
            <h2 class="mb-8">Reset Password</h2>

            @* Mostrar el mensaje de error si existe *@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="ResetPassword" asp-controller="Access" method="post">
                <input type="hidden" asp-for="Email"/>
                <input type="hidden" asp-for="Token"/>

                <div class="mb-24">
                    <label for="new-password" class="form-label mb-8 h6">Nueva Contraseña</label>
                    <div class="position-relative">
                        <input type="password" class="form-control py-11 ps-40" id="new-password" placeholder="Ingrese su nueva contraseña" required asp-for="NewPassword"/>
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex">
                            <i class="ph ph-lock"></i>
                        </span>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-24">
                    <label for="confirm-password" class="form-label mb-8 h6">Confirmar Contraseña</label>
                    <div class="position-relative">
                        <input type="password" class="form-control py-11 ps-40" id="confirm-password" placeholder="Confirme la contraseña" required asp-for="ConfirmPassword"/>
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex">
                            <i class="ph ph-lock"></i>
                        </span>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-main rounded-pill w-100">Confirmar</button>

                <a asp-action="Login" asp-controller="Access" class="mt-24 text-main-600 flex-align gap-8 justify-content-center">
                    <i class="ph ph-arrow-left d-flex"></i> Volver A Inicio De Sesión
                </a>
            </form>
        </div>
    </div>
</section>

<!-- Jquery js -->
<script src="~/js/jquery-3.7.1.min.js"></script>
<!-- Bootstrap Bundle Js -->
<script src="~/js/boostrap.bundle.min.js"></script>
<!-- Phosphor Js -->
<script src="~/js/phosphor-icon.js"></script>
<!-- file upload -->
<script src="~/js/file-upload.js"></script>
<!-- file upload -->
<script src="~/js/plyr.js"></script>
<!-- dataTables -->
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
<!-- full calendar -->
<script src="~/js/full-calendar.js"></script>
<!-- jQuery UI -->
<script src="~/js/jquery-ui.js"></script>
<!-- jQuery UI -->
<script src="~/js/editor-quill.js"></script>
<!-- apex charts -->
<script src="~/js/apexcharts.min.js"></script>
<!-- Calendar Js -->
<script src="~/js/calendar.js"></script>
<!-- jvectormap Js -->
<script src="~/js/jquery-jvectormap-2.0.5.min.js"></script>
<!-- jvectormap world Js -->
<script src="~/js/jquery-jvectormap-world-mill-en.js"></script>

<!-- main js -->
<script src="~/js/main.js"></script>

</body>
</html>