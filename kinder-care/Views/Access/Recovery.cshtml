@model kinder_care.Models.ViewModels.RecoveryViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Recuperar Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/global.css" rel="stylesheet"/>
    <link href="~/css/login/login.css" rel="stylesheet"/>
</head>

<body class="bg-dark">
<div class="login-container text-center text-white">
    <hr/>
    <br/>
    <h2 class="fw-bold mb-2 text-uppercase">Recuperar Contraseña</h2>
    <br/>

    @* Mostrar el mensaje de éxito si existe *@
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

    @* Mostrar el mensaje de error si existe *@
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="Recovery" asp-controller="Access" method="post" class="text-center">
        <div class="form-outline form-white mb-4">
            <label for="Email" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control form-control-lg" placeholder="email@ejemplo.com" required asp-for="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button class="btn btn-outline-light btn-lg px-5" type="submit">Recuperar Contraseña</button>
        <br/>
        <br/>
    </form>

    <hr/>
    <a class="text-center link-light text-decoration-none" asp-action="Login" asp-controller="Access">Volver al inicio de sesión</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"></script>
</body>

</html>