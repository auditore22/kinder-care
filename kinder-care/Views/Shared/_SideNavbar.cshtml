<!-- ============================ Sidebar Start ============================ -->
<aside class="sidebar">
    <!-- sidebar close btn -->
    <button type="button"
            class="sidebar-close-btn text-gray-500 hover-text-white hover-bg-main-600 text-md w-24 h-24 border border-gray-100 hover-border-main-600 d-xl-none d-flex flex-center rounded-circle position-absolute">
        <i class="ph ph-x"></i>
    </button>
    <!-- sidebar close btn -->

    <a asp-action="Index" asp-controller="Home"
       class="sidebar__logo text-center p-20 position-sticky inset-block-start-0 bg-white w-100 z-1 pb-10">
        <img src="~/images/logo/logo-kinder.png" alt="Logo" style="width: 170px; height: 170px">
    </a>

    <div class="sidebar-menu-wrapper overflow-y-auto scroll-sm">
        <div class="p-20 pt-10">
            <ul class="sidebar-menu">
                <li class="sidebar-menu__item">
                    <a asp-action="Index" asp-controller="Home" class="sidebar-menu__link">
                        <span class="icon">
                            <i class="ph ph-chats-teardrop"></i>
                        </span>
                        <span class="text">Inicio</span>
                    </a>
                </li>
                <li class="sidebar-menu__item has-dropdown">

                    <!-- Submenu End -->
                </li>
                @{
                    if (ViewBag.RoleName == "Administrador")
                    {
                        <li class="sidebar-menu__item">
                            <a asp-action="Index" asp-controller="Usuarios" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-users-three"></i>
                                </span>
                                <span class="text">Usuarios</span>
                            </a>
                        </li>

                        <li class="sidebar-menu__item">
                            <a asp-action="Index" asp-controller="Docentes" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-users"></i>
                                </span>
                                <span class="text">Docentes</span>
                            </a>
                        </li>
                        
                        <li class="sidebar-menu__item">
                            <a asp-action="ListaAsistencia_Admin" asp-controller="Asistencia"
                               class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-chart-bar"></i>
                                </span>
                                <span class="text">Asistencias</span>
                            </a>
                        </li>
                    }

                    if (ViewBag.RoleName == "Docente")
                    {
                        <li class="sidebar-menu__item">
                            <a asp-action="ListaNinos" asp-controller="Asistencia" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-users-three"></i>
                                </span>
                                <span class="text">Estudiantes</span>
                            </a>
                        </li>

                        <li class="sidebar-menu__item">
                            <a asp-action="ListaAsistencia" asp-controller="Asistencia" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-chart-bar"></i>
                                </span>
                                <span class="text">Asistencias</span>
                            </a>
                        </li>
                    }

                    if (ViewBag.RoleName == "Administrador" || ViewBag.RoleName == "Docente")
                    {
                        <li class="sidebar-menu__item">
                            <a asp-action="ManageRecords" asp-controller="Users" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-clipboard-text"></i>
                                </span>
                                <span class="text">Expedientes</span>
                            </a>
                        </li>

                        <li class="sidebar-menu__item">
                            <a asp-action="Crear_Nino" asp-controller="Ninos" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-users-three"></i>
                                </span>
                                <span class="text">Registrar Niños</span>
                            </a>
                        </li>
                    }

                    if (ViewBag.RoleName == "Administrador")
                        {
                            <li class="sidebar-menu__item">
                                <a asp-action="ManagePayments" asp-controller="Payments" class="sidebar-menu__link">
                                    <span class="icon">
                                        <i class="ph ph-coins"></i>
                                    </span>
                                    <span class="text">Pagos</span>
                                </a>
                            </li>
                        }
                    

                    if (ViewBag.RoleName == "Padre")
                    {
                        <li class="sidebar-menu__item">
                            <a asp-action="Index" asp-controller="Ninos" class="sidebar-menu__link">
                                <span class="icon">
                                    <i class="ph ph-users-three"></i>
                                </span>
                                <span class="text">Hijos</span>
                            </a>
                        </li>
                    }

                    <li class="sidebar-menu__item">
                        <a asp-action="Calendar" asp-controller="Events" class="sidebar-menu__link">
                            <span class="icon">
                                <i class="ph ph-calendar-dots"></i>
                            </span>
                            <span class="text">Eventos</span>
                        </a>
                    </li>
                }


                <li class="sidebar-menu__item">
                    <span
                        class="text-gray-300 text-sm px-20 pt-20 fw-semibold border-top border-gray-100 d-block text-uppercase">
                        Ajustes
                    </span>
                </li>
                <li class="sidebar-menu__item">
                    <a asp-action="Index" asp-route-id="@ViewBag.UserId" asp-controller="UserProfile"
                       class="sidebar-menu__link">
                        <span class="icon">
                            <i class="ph ph-gear"></i>
                        </span>
                        <span class="text">Perfil</span>
                    </a>
                </li>
                <li class="sidebar-menu__item">
                    <a asp-action="ChangePassword" asp-controller="Configuration" class="sidebar-menu__link">
                        <span class="icon">
                            <i class="ph ph-lock"></i> <!-- Ícono de candado -->
                        </span>
                        <span class="text">Contraseña</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="p-20 pt-80">
            <div class="p-20 pt-0 rounded-16 text-center mt-74">
            </div>
        </div>
    </div>
</aside>
<!-- ============================ Sidebar End  ============================ -->