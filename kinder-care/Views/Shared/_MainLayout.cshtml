<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title> Kinder Care</title>
    @await Html.PartialAsync("_ResourcesHead")
</head>
<body>
<!--==================== Preloader Start ====================-->
<div class="preloader">
    <div class="loader"></div>
</div>
<!--==================== Preloader End ====================-->

<!--==================== Sidebar Overlay End ====================-->
<div class="side-overlay"></div>
<!--==================== Sidebar Overlay End ====================-->

<!-- Sidebar -->
@await Html.PartialAsync("_SideNavbar")

<div class="dashboard-main-wrapper">
    <!-- Top Navbar -->
    @await Html.PartialAsync("_TopNavbar")

    <!-- Main content -->
    <div class="dashboard-body">
        @RenderBody()
    </div>

    <!-- Footer como Partial View -->
    @await Html.PartialAsync("_Footer")
</div>

<!-- Scripts -->
@await Html.PartialAsync("_ResourcesScripts")

</body>
</html>