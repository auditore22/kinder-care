@{
var homeUrl = Url.Action("Index", "Home");
Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/login/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <h2 class="fw-bold mb-2 text-uppercase">Iniciar sesión</h2>
        <p class="text-white-50 mb-5 text-center">Ingrese con sus credenciales</p>

        <div class="form-outline form-white mb-4">
            <input type="email" id="typeEmailX" class="form-control form-control-lg" />
            <label class="form-label" for="typeEmailX">Correo Electrónico</label>
        </div>

        <div class="form-outline form-white mb-4">
            <input type="password" id="typePasswordX" class="form-control form-control-lg" />
            <label class="form-label" for="typePasswordX">Contraseña</label>
        </div>

        <p class="small mb-5 pb-lg-2 text-center"><a class="text-white-50" href="#">¿Olvidaste tu contraseña?</a></p>
        <button class="btn btn-outline-light btn-lg px-5 d-block mx-auto" type="button" onclick="handleLogin()">Iniciar Sesión</button>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>


<script>
    let homeUrl = '@homeUrl';

    function handleLogin() {
        let email = document.getElementById('typeEmailX').value;

        // Determina el tipo de usuario basado en el valor del email
        let userType;
        if (email === "1") {
            userType = 1; // Admin
        } else if (email === "2") {
            userType = 2; // Maestro
        } else if (email === "3") {
            userType = 3; // Padre
        } else {
            userType = 1; // Admin por defecto
        }
        
        localStorage.setItem('userType', userType);
        window.location.href = homeUrl;
    }
</script>
</html>