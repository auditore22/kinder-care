            <div class="col-12">
                <input type="text" id="searchInput" placeholder="Buscar por Nombre o Grupo..." onkeyup="filterTable()">
            </div>
        </div>

        <div class="table-wrapper">
            <table id="recordsTable">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Grupo Asignado</th>
