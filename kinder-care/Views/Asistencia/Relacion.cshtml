@model kinder_care.Models.ViewModels.RelacionDocenteNinosVM

<!-- Breadcrumb Start -->
<div class="breadcrumb mb-24">
    <ul class="flex-align gap-4">
        <li>
            <a asp-action="Index" asp-controller="Home" class="text-gray-200 fw-normal text-15 hover-text-main-600">Home</a>
        </li>
        <li>
            <span class="text-gray-500 fw-normal d-flex">
                <i class="ph ph-caret-right"></i>
            </span>
        </li>
        <li>
            <span class="text-main-600 fw-normal text-15">Relacionar Docente</span>
        </li>
    </ul>
</div>
<!-- Breadcrumb End -->

<div class="card overflow-hidden">
    <div class="card-body p-0">
        <div class="cover-img position-relative">
            <div class="avatar-preview">
                <div style="background: rgb(219,162,0); background: linear-gradient(180deg, rgba(219,162,0,0.5041666324733018) 0%, rgba(219,162,0,0) 70%);">
                </div>
            </div>
        </div>

        <div class="setting-profile px-24">
            <div class="flex-between">
                <div class="d-flex align-items-end flex-wrap mb-32 gap-24">
                    <img src="~/images/icons/Registro_logo.png" alt="Docente" class="w-100 h-100 rounded-circle border border-white">
                    <div>
                        <h4 class="mb-8">Docente: @(Model.Docentes.FirstOrDefault()?.IdUsuarioNavigation?.Nombre ?? "Nombre no disponible")</h4>
                        <div class="setting-profile__infos flex-align flex-wrap gap-16">
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-id-card"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">@(Model.Docentes.FirstOrDefault()?.IdUsuarioNavigation?.Cedula ?? "Cédula no disponible")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="tab-content" id="pills-tabContent">
    <!-- My Details Tab start -->
    <div class="tab-pane fade show active" id="pills-details" role="tabpanel" aria-labelledby="pills-details-tab" tabindex="0">
        <div class="card mt-24">
            <div class="card-header border-bottom">
                <h4 class="mb-4">Seleccionar Estudiantes</h4>
                <p class="text-gray-600 text-15">Selecciona los estudiantes que deseas relacionar con el docente.</p>
            </div>
            <div class="card-body">
                <form asp-action="Relacion" method="post">
                    <input type="hidden" asp-for="IdDocente" />

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cédula</th>
                                    <th>Nombre</th>
                                    <th>Seleccionar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var nino in Model.Ninos)
                                {
                                    <tr>
                                        <td>@nino.IdNino</td>
                                        <td>@nino.Cedula</td>
                                        <td>@nino.NombreNino</td>
                                        <td>
                                            <input type="checkbox" name="Ninos" value="@nino.IdNino" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end mt-3 gap-2">
                        <a asp-action="ListaNinos" class="btn btn-outline-main bg-main-100 border-main-100 text-main-600 rounded-pill py-9">Cancelar</a>
                        <button type="submit" class="btn btn-main rounded-pill py-9">Crear Relación</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
