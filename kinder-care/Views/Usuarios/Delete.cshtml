@model kinder_care.Models.Usuarios

@{
    ViewBag.Title = "Eliminacion de Perfiles de Usuarios";
    Layout = "_SecondaryLayout";
}
<section id="manageRoles" class="wrapper style1 fullscreen fade-up">
    <div class="inner">
        <h1>¿Desea eliminar este usuario?</h1>

        <div class="table-wrapper">
            <table id="profilesTable">
                <thead>
                    <tr>
                        <th>Cedula</th>
                        <th>Nombre Usuario</th>
                        <th>Contraseña</th>
                        <th>Numero Telefono</th>
                        <th>Direccion</th>
                        <th>Correo</th>
                        <th>Fecha de Creacion</th>
                        <th>Ultima Actualizacion</th>
                        <th>Estado</th>
                        <th>Rol</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Cedula)</td>
                        <td>@Html.DisplayFor(model => model.Nombre)</td>
                        <td>@Html.DisplayFor(model => model.ContrasenaHash)</td>
                        <td>@Html.DisplayFor(model => model.NumTelefono)</td>
                        <td>@Html.DisplayFor(model => model.Direccion)</td>
                        <td>@Html.DisplayFor(model => model.CorreoElectronico)</td>
                        <td>@Html.DisplayFor(model => model.FechaCreacion)</td>
                        <td>@Html.DisplayFor(model => model.UltimaActualizacion)</td>
                        <td>@Html.DisplayFor(model => model.Activo)</td>
                        <td>@Html.DisplayFor(model => model.IdRolNavigation.IdRol)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUsuario" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <hr />
                <a asp-action="Index" asp-controller="Usuarios" class="button primary">Regresar</a>
            </form>
        </div>
    </div>
</section>