@model kinder_care.Models.Usuarios

<div class="breadcrumb mb-24">
    <ul class="flex-align gap-4">
        <li>
            <a asp-action="Index" asp-controller="Home" class="text-gray-200 fw-normal text-15 hover-text-main-600">Inicio</a>
        </li>
        <li>
            <span class="text-gray-500 fw-normal d-flex">
                <i class="ph ph-caret-right"></i>
            </span>
        </li>
        <li>
            <span class="text-main-600 fw-normal text-15">Crear Usuarios</span>
        </li>
    </ul>
</div>

<div class="tab-content" id="pills-tabContent">
    <!-- My Details Tab start -->
    <div class="tab-pane fade show active" id="pills-details" role="tabpanel" aria-labelledby="pills-details-tab" tabindex="0">
        <div class="card mt-24">
            <div class="card-header border-bottom">
                <h4 class="mb-4">Crear un Usuario</h4>
            </div>
            <div class="card-body">
                <div class="row gy-4">

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-24">
                            <label asp-for="Cedula" class="form-label mb-8 h6">Cedula</label>
                            <div class="position-relative">
                                <input type="text" class="form-control py-11 ps-40" id="cedula" placeholder="101110111.." required asp-for="Cedula">
                                <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-user"></i></span>
                            </div>
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <div class="mb-24">
                            <label asp-for="CorreoElectronico" class="form-label mb-8 h6">Email</label>
                            <div class="position-relative">
                                <input type="email" class="form-control py-11 ps-40" id="email" placeholder="Email@gmail.com.." required asp-for="CorreoElectronico">
                                <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-envelope"></i></span>
                            </div>
                            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                        </div>

                        <div class="mb-24">
                            <label asp-for="Nombre" class="form-label mb-8 h6">Nombre Completo</label>
                            <div class="position-relative">
                                <input type="text" class="form-control py-11 ps-40" id="nombre" placeholder="Nombre.." required asp-for="Nombre">
                                <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-user"></i></span>
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-24">
                            <label asp-for="ContrasenaHash" class="form-label mb-8 h6">Contraseña</label>
                            <div class="position-relative">
                                <input type="password" class="form-control py-11 ps-40" id="password" placeholder="Ingrese una Contraseña..." required asp-for="ContrasenaHash">
                                <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-lock"></i></span>
                            </div>
                            <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
                        </div>

                        <div class="mb-24">
                            <label asp-for="NumTelefono" class="form-label mb-8 h6">Numero de Telefono</label>
                            <div class="position-relative">
                                <input type="number" class="form-control py-11 ps-40" id="phone" placeholder="12345678.." required asp-for="NumTelefono">
                                <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-phone"></i></span>
                            </div>
                            <span asp-validation-for="NumTelefono" class="text-danger"></span>
                        </div>

                        <div class="mb-24">
                            <label asp-for="Direccion" class="form-label mb-8 h6">Direccion</label>
                            <div class="position-relative">
                                <input type="text" class="form-control py-11 ps-40" id="direccion" placeholder="Ciudad, Provincia.." required asp-for="Direccion">
                                <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-map-pin"></i></span>
                            </div>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-24">
                            <label asp-for="IdRol" class="form-label mb-8 h6">Rol</label>
                            <div class="position-relative">
                                <select asp-for="IdRol" class="form-control">
                                    <option value="2">Docente</option>
                                    <option value="3">Padre</option>
                                </select>
                                <span asp-validation-for="IdRol" class="text-danger"></span>
                            </div>
                        </div>


                        @if (ViewData["Mensaje"] != null)
                        {
                            <span class="text-danger">
                                @ViewData["Mensaje"]
                            </span>
                        }

                        <div class="col-12">
                            <div class="d-grid">
                                <button class="btn btn-main rounded-pill w-100" type="submit">Ingresar Usuario</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
