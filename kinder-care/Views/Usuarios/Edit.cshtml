@model kinder_care.Models.Usuarios

@{
    ViewBag.Title = "Modificar Perfiles de Usuarios";
    Layout = "_SecondaryLayout";
}

<section id="manageRoles" class="wrapper style1 fullscreen fade-up">
    <div class="inner">
        <h2>Gestión de Usuarios</h2>
        <p>Administra los roles de los usuarios en el sistema, asignando o removiendo permisos según sea necesario.</p>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="Cedula" class="form-label">Cedula</label>
                <input class="form-control mb-3" type="text" placeholder="Cedula" required asp-for="Cedula" readonly />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Nombre Usuario" class="form-label">Nombre del Usuario</label>
                <input class="form-control mb-3" type="text" placeholder="Nombre Usuario" required asp-for="Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Contrasena" class="form-label">Contraseña (Ingresar de nuevo contraseña)</label>
                <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="ContrasenaHash" />
                <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NumTelefono" class="form-label">Numero de telefono</label>
                <input class="form-control mb-3" type="number" placeholder="Numero telefono" required asp-for="NumTelefono"
                       style="background-color: black; color: white; border-color: white;" />
                <span asp-validation-for="NumTelefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Direccion" class="form-label">Direccion</label>
                <input class="form-control mb-3" type="text" placeholder="Direccion" required asp-for="Direccion" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CorreoElectronico" class="form-label">Correo Electronico</label>
                <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="CorreoElectronico" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
            </div>

            <button class="btn btn-primary" type="submit">Editar</button>
            <hr/>
            <div>
                <a asp-action="Index" asp-controller="Usuarios" class="button primary">Regresar</a>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}