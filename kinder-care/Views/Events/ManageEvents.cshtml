@model IEnumerable<Actividades>

@{
    ViewBag.Title = "Gestión de Eventos";
}

<div class="dashboard-body">
    <!-- Breadcrumb Start -->
    <div class="breadcrumb mb-24">
        <ul class="flex-align gap-4">
            <li>
                <a asp-action="Index" asp-controller="Home" class="text-gray-200 fw-normal text-15 hover-text-main-600">Home</a>
            </li>
            <li>
                <span class="text-gray-500 fw-normal d-flex">
                    <i class="ph ph-caret-right"></i>
                </span>
            </li>
            <li>
                <span class="text-main-600 fw-normal text-15">Eventos</span>
            </li>
        </ul>
    </div>
    <!-- Breadcrumb End -->
    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
    }

    <!-- Recommended Start -->
    <div class="card mt-24 bg-transparent">
        <div class="card-body p-0">
            <div id='wrap'>
                <div id='calendar' class="position-relative">
                    <button type="button" class="add-event btn btn-main text-sm btn-sm px-24 rounded-pill py-12 d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="ph ph-plus me-4"></i>
                        Agregar
                    </button>
                </div>
                <div style='clear:both'></div>
            </div>
        </div>
    </div>
    <!-- Recommended End -->
</div>


<!-- Modal Add Event -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content radius-16 bg-base">
            <div class="modal-header py-16 px-24 border border-top-0 border-start-0 border-end-0">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar Nuevo Evento</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-24">
                <!-- Formulario para agregar evento -->
                <form id="createEventForm" asp-action="CreateEvent" asp-controller="Events" method="post">
                    <div class="row">
                        <div class="col-12 mb-20">
                            <label class="form-label fw-semibold text-primary-light text-sm mb-8">Título del Evento:</label>
                            <input type="text" name="title" class="form-control radius-8" placeholder="Ingresa el título del evento" required>
                        </div>
                        <div class="col-md-6 mb-20">
                            <label class="form-label fw-semibold text-primary-light text-sm mb-8">Fecha del Evento:</label>
                            <input type="date" name="date" class="form-control radius-8 bg-base" required>
                        </div>
                        <div class="col-md-6 mb-20">
                            <label class="form-label fw-semibold text-primary-light text-sm mb-8">Tipo de Actividad:</label>
                            <select name="typeId" class="form-control radius-8" required>
                                @foreach (var tipo in ViewBag.TiposActividad)
                                {
                                <option value="@tipo.IdTipoActividad">@tipo.NombreTipoActividad</option>
                                }
                            </select>
                        </div>
                        <div class="col-12 mb-20">
                            <label class="form-label fw-semibold text-primary-light text-sm mb-8">Descripción:</label>
                            <textarea name="description" class="form-control radius-8" rows="4" placeholder="Ingresa la descripción del evento"></textarea>
                        </div>
                        <div class="d-flex align-items-center justify-content-center gap-8 mt-24">
                            <button type="reset" class="btn bg-danger-600 hover-bg-danger-800 text-md px-24 py-12 radius-8">Cancelar</button>
                            <button type="submit" class="btn bg-main-600 hover-bg-main-800 text-md px-24 py-12 radius-8">Guardar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Manejar el envío del formulario de creación de evento
        $('#createEventForm').on('submit', function (e) {
            e.preventDefault();

            const title = $('#eventTitle').val();
            const typeId = $('#eventType').val();
            const date = $('#eventDate').val();
            const description = $('#eventDesc').val();

            // Validar los campos
            if (!title || !typeId || !date) {
                alert("Por favor completa todos los campos obligatorios.");
                return;
            }

            // Enviar la solicitud AJAX
            $.ajax({
                url: '/Events/CreateEvent',
                type: 'POST',
                data: {
                    title: title,
                    typeId: typeId,
                    date: date,
                    description: description
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload(); // Recargar la página para actualizar el calendario
                    } else {
                        alert("Error: " + response.message);
                    }
                },
                error: function () {
                    alert("Error al enviar la solicitud. Intenta nuevamente.");
                }
            });
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/locales/es.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.3/jquery-ui.min.js"></script>