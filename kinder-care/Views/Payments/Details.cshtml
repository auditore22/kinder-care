@model Pagos

<!-- Breadcrumb Start -->
<div class="breadcrumb mb-24">
    <ul class="flex-align gap-4">
        <li>
            <a asp-action="Index" asp-controller="Home" class="text-gray-200 fw-normal text-15 hover-text-main-600">Inicio</a>
        </li>
        <li>
            <span class="text-gray-500 fw-normal d-flex">
                <i class="ph ph-caret-right"></i>
            </span>
        </li>
        <li>
            <span class="text-main-600 fw-normal text-15">Detalles del Pago</span>
        </li>
    </ul>
</div>
<!-- Breadcrumb End -->

<div class="card overflow-hidden">
    <div class="card-body p-0">
        <div class="cover-img position-relative">
            <div class="avatar-upload">
                <input type="file" id="coverImageUpload" accept=".png, .jpg, .jpeg">
                <div class="avatar-preview">
                    <div id="coverImagePreview" style="background: rgb(45, 156, 219); background: linear-gradient(180deg, rgba(45, 156, 219, 0.5) 0%, rgba(45, 156, 219, 0) 70%);">
                    </div>
                </div>
            </div>
        </div>

        <div class="setting-profile px-24">
            <div class="flex-between">
                <div class="d-flex align-items-end flex-wrap mb-32 gap-24">
                    <img src="~/images/icons/payment.png" alt="Payment Icon" class="w-120 h-120 rounded-circle">
                    <div>
                        <h4 class="mb-8">Pago ID: @Model.IdPago</h4>
                        <div class="setting-profile__infos flex-align flex-wrap gap-16">
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-calendar-dots"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">Fecha de Pago: @Model.FechaPago.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-user"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">Padre: @Model.Padre?.Nombre</span>
                            </div>
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-child"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">Estudiante: @Model.Nino?.NombreNino</span>
                            </div>
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-currency-dollar"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">Monto: ₡@Model.Monto</span>
                            </div>
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-bookmark-simple"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">Tipo de Pago: @Model.TipoPago?.NombreTipoPago</span>
                            </div>
                            <div class="flex-align gap-6">
                                <span class="text-gray-600 d-flex text-lg">
                                    <i class="ph ph-note-pencil"></i>
                                </span>
                                <span class="text-gray-600 d-flex text-15">Referencia: @Model.ReferenciaFactura</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <ul class="nav common-tab style-two nav-pills mb-0" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-details-tab" data-bs-toggle="pill" data-bs-target="#pills-details" type="button" role="tab" aria-controls="pills-details" aria-selected="true">Detalles</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-edit-tab" data-bs-toggle="pill" data-bs-target="#pills-edit" type="button" role="tab" aria-controls="pills-edit" aria-selected="false">Editar</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-delete-tab" data-bs-toggle="pill" data-bs-target="#pills-delete" type="button" role="tab" aria-controls="pills-delete" aria-selected="false">Eliminar</button>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="tab-content" id="pills-tabContent">
    
    <!-- Detalles del Pago -->
    <div class="tab-pane fade show active" id="pills-details" role="tabpanel" aria-labelledby="pills-details-tab">
        <div class="card mt-24">
            <div class="card-header border-bottom">
                <h4 class="mb-4">Información Adicional</h4>
            </div>
            <div class="card-body">
                <p><strong>Monto del pago:</strong> @Model.Monto</p>
                <p><strong>Método de Pago:</strong> @Model.MetodoPago</p>
                <p><strong>Referencia de factura:</strong> @Model.ReferenciaFactura</p>
                <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion?.ToString("dd/MM/yyyy")</p>
                <p><strong>Última Actualización:</strong> @Model.UltimaActualizacion?.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>

    <!-- Editar Pago -->
    <div class="tab-pane fade" id="pills-edit" role="tabpanel" aria-labelledby="pills-edit-tab">
        <div class="card mt-24">
            <div class="card-body">
                <h4 class="mb-4">Editar Pago</h4>

                @if (ViewBag.ErrorMessage != null)
                {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form asp-action="Edit" asp-controller="Payments" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="IdPago" />

                    <!-- Campo de Fecha de Pago -->
                    <div class="mb-4">
                        <label for="FechaPago" class="form-label">Fecha de Pago</label>
                        <input type="date" class="form-control" asp-for="FechaPago" value="@Model.FechaPago.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="FechaPago" class="text-danger"></span>
                    </div>

                    <!-- Campo de Monto -->
                    <div class="mb-4">
                        <label for="Monto" class="form-label">Monto</label>
                        <input type="text" class="form-control" asp-for="Monto" placeholder="0.00" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                    <!-- Campo de Método de Pago -->
                    <div class="mb-4">
                        <label for="MetodoPago" class="form-label">Método de Pago</label>
                        <input type="text" class="form-control" asp-for="MetodoPago" placeholder="E.g., Transferencia, Efectivo" />
                        <span asp-validation-for="MetodoPago" class="text-danger"></span>
                    </div>

                    <!-- Campo de Referencia de Factura -->
                    <div class="mb-4">
                        <label for="ReferenciaFactura" class="form-label">Referencia de Factura</label>
                        <input type="text" class="form-control" asp-for="ReferenciaFactura" placeholder="Número de Factura" />
                        <span asp-validation-for="ReferenciaFactura" class="text-danger"></span>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-main rounded-pill">Guardar Cambios</button>
                        <a href="@Url.Action("ManagePayments", "Payments")" class="btn btn-secondary rounded-pill">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <!-- Eliminar Pago -->
    <div class="tab-pane fade" id="pills-delete" role="tabpanel" aria-labelledby="pills-delete-tab">
        <div class="card mt-24">
            <div class="card-body">
                <h4>¿Estás seguro de que deseas eliminar este pago?</h4>
                <form asp-action="DeleteConfirmed" asp-controller="Payments" method="post">
                    <input type="hidden" asp-for="IdPago"/>
                    <button type="submit" class="btn btn-danger rounded-pill">Eliminar</button>
                    <a href="@Url.Action("ManagePayments", "Payments")" class="btn btn-secondary rounded-pill">Cancelar</a>
                </form>
            </div>
        </div>
    </div>

</div>

<!-- Botón de Volver al Index -->
<div class="mt-24">
    <a href="@Url.Action("ManagePayments", "Payments")" class="btn btn-main rounded-pill">
        <i class="fas fa-arrow-left me-2"></i> Volver a la Gestión de Pagos
    </a>
</div>

