@model kinder_care.Models.Pagos

@{
    ViewBag.Title = "Eliminar Pago";
    Layout = "_SecondaryLayout";
}

<section id="deletePayment" class="wrapper style1 fullscreen fade-up">
    <div class="inner">
        <h2>Eliminar Pago</h2>
        <p>¿Estás seguro que deseas eliminar el siguiente pago?</p>

        <div class="table-wrapper">
            <table class="alt">
                <tbody>
                <tr>
                    <th>Fecha de Pago</th>
                    <td>@Model.FechaPago.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Nombre del Estudiante</th>
                    <td>@Model.Nino?.NombreNino</td>
                </tr>
                <tr>
                    <th>Nombre del Padre</th>
                    <td>@Model.Padre?.Nombre</td>
                </tr>
                <tr>
                    <th>Monto</th>
                    <td>$@Model.Monto</td>
                </tr>
                <tr>
                    <th>Tipo de Pago</th>
                    <td>@Model.TipoPago?.NombreTipoPago</td>
                </tr>
                </tbody>
            </table>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.IdPago" />
            <ul class="actions">
                <li>
                    <input type="submit" value="Eliminar" class="primary" />
                </li>
                <li>
                    <a href="@Url.Action("ManagePayments", "Payments")" class="button alt">Cancelar</a>
                </li>
            </ul>
        </form>

    </div>
</section>