@model kinder_care.Models.ViewModels.PaymentViewModel

@{
    ViewBag.Title = "Editar Pago";
    Layout = "_SecondaryLayout";
}

<section id="editPayment" class="wrapper style1 fullscreen fade-up">
    <div class="inner">
        <h2>Editar Pago</h2>

        <form asp-action="Edit" asp-controller="Payments" method="post">
            <!-- Campo oculto para IdPago -->
            <input type="hidden" asp-for="IdPago"/>

            <!-- Resto de los campos de la vista -->
            <div class="row gtr-uniform">
                <!-- Campos de estudiante, padre, tipo de pago (solo informativos) -->
                <div class="col-6 col-12-small">
                    <label>Nombre del Estudiante</label>
                    <input type="text" class="form-control" value="@ViewBag.Nino" disabled/>
                </div>
                <div class="col-6 col-12-small">
                    <label>Nombre del Padre</label>
                    <input type="text" class="form-control" value="@ViewBag.Padre" disabled/>
                </div>
                <div class="col-6 col-12-small">
                    <label>Tipo de Pago</label>
                    <input type="text" class="form-control" value="@ViewBag.TipoPago" disabled/>
                </div>

                <!-- Campos editables -->
                <div class="col-6 col-12-small">
                    <label for="FechaPago">Fecha de Pago</label>
                    <input asp-for="FechaPago" type="date" class="form-control"/>
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>

                <div class="col-6 col-12-small">
                    <label for="Monto">Monto</label>
                    <input asp-for="Monto" class="form-control"/>
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="col-6 col-12-small">
                    <label for="MetodoPago">Método de Pago</label>
                    <input asp-for="MetodoPago" class="form-control"/>
                    <span asp-validation-for="MetodoPago" class="text-danger"></span>
                </div>

                <div class="col-6 col-12-small">
                    <label for="ReferenciaFactura">Referencia de Factura</label>
                    <input asp-for="ReferenciaFactura" class="form-control"/>
                    <span asp-validation-for="ReferenciaFactura" class="text-danger"></span>
                </div>

                <!-- Botones de guardar y cancelar -->
                <div class="col-12 d-flex justify-content-between mt-4">
                    <input type="submit" value="Guardar Cambios" class="primary" />
                    <a href="@Url.Action("ManagePayments", "Payments")" class="button alt">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</section>

<style>
    /* Estilo para el campo de fecha */
    input[type="date"] {
        color: #495057;
        background-color: #fff;
    }
</style>