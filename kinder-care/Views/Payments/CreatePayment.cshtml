@model kinder_care.Models.ViewModels.PaymentViewModel

@{
    ViewBag.Title = "Registrar Nuevo Pago";
    Layout = "_SecondaryLayout";
}

<section id="registerPayment" class="wrapper style1 fullscreen fade-up">
    <div class="inner">
        <h2>Registrar Nuevo Pago</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="CreatePayment" method="post" class="form">
            <div class="row gtr-uniform">
                <!-- Selección de niño -->
                <div class="col-6 col-12-small">
                    <label for="IdNino">Nombre del Estudiante</label>
                    <select asp-for="IdNino" class="form-control" asp-items="ViewBag.Ninos">
                        <option value="">Selecciona el nombre del estudiante</option>
                    </select>
                    <span asp-validation-for="IdNino" class="text-danger"></span>
                </div>

                <!-- Selección de padre -->
                <div class="col-6 col-12-small">
                    <label for="IdPadre">Nombre del Padre</label>
                    <select asp-for="IdPadre" class="form-control" asp-items="ViewBag.Padres">
                        <option value="">Selecciona el nombre del padre</option>
                    </select>
                    <span asp-validation-for="IdPadre" class="text-danger"></span>
                </div>

                <!-- Selección de tipo de pago -->
                <div class="col-6 col-12-small">
                    <label for="IdTipoPago">Tipo de Pago</label>
                    <select asp-for="IdTipoPago" class="form-control" asp-items="ViewBag.TiposPago">
                        <option value="">Selecciona el tipo de pago</option>
                    </select>
                    <span asp-validation-for="IdTipoPago" class="text-danger"></span>
                </div>

                <!-- Campo de Monto -->
                <div class="col-6 col-12-small">
                    <label for="Monto">Monto</label>
                    <input asp-for="Monto" class="form-control" placeholder="0.00" value="@(Model.Monto == 0 ? "" : Model.Monto.ToString())"/>
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <!-- Campo de Fecha de Pago -->
                <div class="col-6 col-12-small">
                    <label for="FechaPago">Fecha de Pago</label>
                    <input asp-for="FechaPago" type="date" class="form-control bg-white" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>

                <!-- Campo de Método de Pago -->
                <div class="col-6 col-12-small">
                    <label for="MetodoPago">Método de Pago</label>
                    <input asp-for="MetodoPago" class="form-control" placeholder="E.g., Transferencia, Efectivo"/>
                    <span asp-validation-for="MetodoPago" class="text-danger"></span>
                </div>

                <!-- Campo de Referencia de Factura -->
                <div class="col-6 col-12-small">
                    <label for="ReferenciaFactura">Referencia de Factura</label>
                    <input asp-for="ReferenciaFactura" class="form-control" placeholder="Número de Factura"/>
                    <span asp-validation-for="ReferenciaFactura" class="text-danger"></span>
                </div>

                <!-- Botón de enviar -->
                <div class="col-12">
                    <ul class="actions">
                        <li>
                            <input type="submit" value="Registrar Pago" class="primary"/>
                        </li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</section>

<style>
    .form-label {
        color: #333;
    }
    .form-select, .form-control {
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .text-danger {
        color: red !important;
    }
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 4px;
    }

    /* Estilo para el campo de fecha */
    input[type="date"] {
        color: #495057;
        background-color: #fff;
    }
</style>