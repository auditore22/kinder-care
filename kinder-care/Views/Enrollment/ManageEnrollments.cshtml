@{
    ViewBag.Title = "Gestión de Matrículas";
    Layout = "_SecondaryLayout";
}

<section id="manageEnrollments" class="wrapper style1 fullscreen fade-up">
    <div class="inner">
        <h2>Gestión de Matrículas</h2>
        <p>Administra las matrículas de los niños en el sistema, incluyendo la validación y aprobación de nuevas matrículas.</p>

        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Estado de Matrícula</th>
                        <th>Grupo Asignado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Row -->
                    <tr>
                        <td>Ana Maria Lopez</td>
                        <td>20/05/2016</td>
                        <td>Pendiente</td>
                        <td>Grupo 2</td>
                        <td>
                            <ul class="actions">
                                <li><a href="#" class="button small">Ver Detalles</a></li>
                                <li><a href="#" class="button small primary">Aprobar Matrícula</a></li>
                                <li><a href="#" class="button small alt">Rechazar Matrícula</a></li>
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <ul class="actions">
            <li><a href="#" class="button primary">Iniciar Nueva Matrícula</a></li>
        </ul>
    </div>
</section>
